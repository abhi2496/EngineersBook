<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutChatMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/draw_back_chat_me"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvMyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="This is my message." />

        <TextView
            android:id="@+id/tvMyTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="07:50 PM" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutChatOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/draw_back_chat_other"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvOtherMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="This is my message." />

        <TextView
            android:id="@+id/tvOtherTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="07:50 PM" />

    </LinearLayout>


</RelativeLayout>